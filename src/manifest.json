{
	"name" : "Habrafix",
	"description" : "Хабрахабр, только немного лучше",
	"version" : "1.0",
	"update_url" : "http://clients2.google.com/service/update2/crx",	
	"icons" : {
		"128" : "icons/128.png",
		"64"  : "icons/64.png",
		"48"  : "icons/48.png",
		"32"  : "icons/32.png",
		"16"  : "icons/16.png"
	},
	"background_page" : "background.html",
	"content_scripts" : [ {
		"matches" : [
			"http://*.habrahabr.ru/",
			"http://*.habrahabr.ru/*",
			"http://habrahabr.ru/*"
		],
		"css" : [
			"css/main.css",
			"css/config.css",
			"css/karma.css",
			"css/comments.css",
			"css/print.css",
			"css/tags.css",
			"css/copier.css",
			"css/editor.css"
		],
		"js" : [
			"js/init.js",
			"js/dom.js",			
			"js/user.js",
			"js/location.js",
			"js/options.js",
			"js/karma.js",
			"js/adblock.js",
			"js/cleaner.js",			
			"js/utils.js",			
			"js/comments.js",
			"js/backup.js",
			"js/print.js",
			"js/sandtags.js",			
			"js/tags.js",
			"js/copier.js",
			"js/editor.js",
			"js/config.js",
			"js/debug.js"
		]
	} ],
	"permissions": [
		"contextMenus",
		"unlimitedStorage",
		"notifications",
		"tabs"
	]
}
